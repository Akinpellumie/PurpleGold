<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PurpleGold.Views.FAQPage"
             Title="FAQs">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <ProgressBar Grid.Row="0" VerticalOptions="Start" Progress="0.2" IsVisible="False" HorizontalOptions="FillAndExpand" x:Name="Indic"/>
            <WebView Grid.Row="1" HorizontalOptions="Fill" Margin="0,-15,0,0"  VerticalOptions="Fill" x:Name="FaqView" Navigating="FaqView_Navigating" Navigated="FaqView_Navigated"/>

        </Grid>
    </ContentPage.Content>
</ContentPage>