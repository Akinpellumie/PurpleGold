<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" xmlns:ff1="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:Class="PurpleGold.Views.SplashScreenPage"
             NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <pv:PancakeView
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand" 
                BackgroundGradientStartPoint="0.51, 0.15" 
                BackgroundGradientEndPoint="0.23,0.5">
                <pv:PancakeView.BackgroundGradientStops>
                    <pv:GradientStopCollection>
                        <pv:GradientStop Color="#6C39C2" Offset="0"/>
                        <pv:GradientStop Color="#4B78EB" Offset="1"/>
                    </pv:GradientStopCollection>
                </pv:PancakeView.BackgroundGradientStops>

                <Grid
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                    <CarouselView
                        VerticalOptions="Fill"
                        x:Name="carouselView"
                        HeightRequest="150"
                        IsScrollAnimated="True"
                        ItemsSource="{Binding CarouselModelList}"
                        ItemsUpdatingScrollMode="KeepItemsInView"
                        IndicatorView="indicatorView">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Grid 
                                    HorizontalOptions="FillAndExpand"
                                    VerticalOptions="FillAndExpand"
                                    Padding="40,80,40,60">
                                    <Label
                                        x:Name="title"
                                        Text="{Binding Title}"
                                        TextColor="White"
                                        FontSize="20"
                                        FontFamily="{StaticResource FontBold}"
                                        VerticalOptions="Start"/>
                                    <StackLayout 
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center">
                                        <ff1:SvgCachedImage  
                                            Source="{Binding SplashImage}"
                                            HorizontalOptions="Center"
                                            VerticalOptions="CenterAndExpand"
                                            Aspect="AspectFit"
                                            Margin="0,0,0,50"
                                            HeightRequest="150"/>
                                        <Label
                                            x:Name="subtitle"
                                            Text="{Binding Subtitle}"
                                            TextColor="White"
                                            FontSize="20"
                                            HorizontalOptions="Center"
                                            FontFamily="{StaticResource FontBold}"
                                            FontAttributes="Bold"
                                            LineBreakMode="WordWrap"
                                            VerticalOptions="End"/>
                                        <Label
                                            x:Name="desc"
                                            Text="{Binding Description}"
                                            TextColor="White"
                                            FontSize="14"
                                            HorizontalOptions="Center"
                                            Margin="0,10,0,0"
                                            FontFamily="{StaticResource FontRegular}"
                                            LineBreakMode="WordWrap"
                                            VerticalOptions="End"/>

                                        <Button
                                            Margin="0,20,0,0"
                                            Text="Skip"
                                            TextColor="White"
                                            BackgroundColor="{StaticResource PurpleColor}"
                                            HeightRequest="30"
                                            FontFamily="{StaticResource FontRegular}"
                                            FontSize="10"
                                            Clicked="Skip_Clicked"
                                            HorizontalOptions="Center"
                                            CornerRadius="5"
                                            TextTransform="None"
                                            WidthRequest="70"/>
                                    </StackLayout>

                                </Grid>
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <IndicatorView
                        x:Name="indicatorView"
                     Padding="0,0,0,3"
                     HorizontalOptions="Center"
                     IndicatorColor="#7381FF"
                        Margin="0,0,0,75"
                     IndicatorSize="10"
                     SelectedIndicatorColor="White"
                     VerticalOptions="End" />
                </Grid>
            </pv:PancakeView>
        </Grid>
    </ContentPage.Content>
</ContentPage>